rm(list = ls())

#S0 - Stock
#K - Strike
#T - Time interval
#t - Time a start
#r - interest rate
#sigma - std
#n - number of simulated paths 

#CRUDE Monte Carlo European Call Option Pricing
#S(T) = S0 * e^((r-(sigma^2)/2)*(T-t) + sigma *sqrt(T-t) * x), where x ~ N(0,1)
set.seed(420)
S0 <- 100
K <- 90
T <- 8
t <- 0
r <- 0.05
sigma <- 0.2
n <- 10000

Z = sqrt(T-t)*rnorm(n)
ST = S0*exp((r-(sigma^2)/2)*(T-t)+sigma*Z)

Payoff = exp(-r*T)*sapply(ST, function(x) max(0, x-K))
C_mceu = mean(Payoff)
